<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="licenseAgreementViewModel"
            type="com.infineon.nfcbpsk.ui.viewmodels.LicenseAgreementViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_above="@+id/layout_accept_button">

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="serif-monospace"
                android:paddingBottom="20dp"
                android:textColor="@color/engineering_dark"
                android:textSize="14sp" />

        </ScrollView>
        <WebView
            android:id="@+id/webView"
            android:visibility="gone"
            android:layout_above="@+id/layout_accept_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/layout_accept_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btn_accept_agreement"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btn_bg_2"
                android:fontFamily="@font/source_sans_pro_light"
                android:text="@string/accept_license_agreement"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:backgroundTint="@color/berry" />
        </RelativeLayout>
    </RelativeLayout>
</layout>