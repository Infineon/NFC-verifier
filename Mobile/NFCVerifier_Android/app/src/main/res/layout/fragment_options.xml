<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tootls="http://schemas.android.com/tools">

    <data>

        <variable
            name="OptionsViewModel"
            type="com.infineon.nfcbpsk.ui.viewmodels.OptionsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/source_sans_pro_light"
            android:text="@string/options"
            android:textColor="@color/engineering"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_underline_option"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@color/engineering"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"

            />

        <TextView
            android:id="@+id/tv_auto_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/source_sans_pro_light"
            android:text="@string/auto_open_webpage"
            android:textColor="@color/engineering_dark"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_underline_option" />

        <Switch
            android:id="@+id/switch_auto_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_auto_open"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_auto_open"
            tootls:ignore="UseSwitchCompatOrMaterialXml" />

        <View
            android:id="@+id/view_underline_auto_open"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@color/engineering"
            app:layout_constraintTop_toBottomOf="@+id/tv_auto_open"

            />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_underline_auto_open">

            <TextView
                android:id="@+id/tv_auto_open_sec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/source_sans_pro_light"
                android:gravity="center_vertical"
                android:minLines="2"
                android:text="@string/product_webpage_auto_open_after_sec"
                android:textColor="@color/engineering_dark"
                android:textSize="14sp"

                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/tv_sec"
                    android:background="@drawable/btn_bg"
                    android:padding="0dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="0dp"

                        tootls:ignore="UselessParent">

                        <Button
                            android:id="@+id/btn_decrement"
                            android:layout_width="35dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="-2dp"
                            android:background="#F2F1F4"
                            android:gravity="center"
                            android:onClick="@{OptionsViewModel::onClick}"
                            android:padding="0dp"
                            android:text="@string/minus"
                            android:textColor="@color/engineering_dark"
                            android:textSize="12sp"
                            app:backgroundTint="@null"
                            tootls:ignore="SmallSp,UnusedAttribute" />

                        <View
                            android:id="@+id/view_divider"
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:background="@color/engineering" />

                        <Button
                            android:id="@+id/btn_increment"
                            android:layout_width="35dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="-2dp"
                            android:background="#F2F1F4"
                            android:gravity="center"
                            android:onClick="@{OptionsViewModel::onClick}"
                            android:padding="0dp"
                            android:text="@string/plus"
                            android:textColor="@color/engineering_dark"
                            android:textSize="12sp"
                            app:backgroundTint="@null"
                            tootls:ignore="UnusedAttribute" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_sec"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:gravity="center"
                    android:text='@{OptionsViewModel.autoOpenTime+""}'
                    android:textAlignment="center"
                    android:textColor="@color/engineering_dark"
                    android:textSize="14sp"

                    />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_underline_auto_open_sec"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@color/engineering"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"


            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>